<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".EditarLivro">

        <TextView
            style="@style/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edicaoLivro" />

        <EditText
            android:id="@+id/txtEditarTitulo"
            style="@style/editTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/titulo"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtEditarLivroDescricao"
            style="@style/editTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/descricao"
            android:inputType="text" />

        <EditText
            android:id="@+id/txtEditarFoto"
            style="@style/editTextForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/foto" />

        <Button
            android:id="@+id/btnEditarLivro"
            style="@style/butonForm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alterarLivro" />

    </LinearLayout>

</ScrollView>